<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/download"
    xmlns:app="http://schemas.android.com/apk/res-auto">

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="400dp"
       android:background="@drawable/roundunder"
       app:layout_constraintBottom_toBottomOf="parent">

       <TextView
           android:id="@+id/my"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="   MY LOVE, \nYOU LIKE A FLOWER"
           android:textSize="30dp"
           app:layout_constraintLeft_toLeftOf="parent"
           android:layout_marginTop="30dp"
           tools:ignore="MissingConstraints" />

       <ImageView
           android:id="@+id/star"
           android:layout_width="20dp"
           android:layout_height="20dp"
           android:layout_marginTop="20dp"
           android:src="@drawable/ic_star"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/my" />

       <TextView
           android:id="@+id/choice"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Editor's Choice"
           app:layout_constraintTop_toBottomOf="@id/my"
           app:layout_constraintLeft_toRightOf="@id/star"
           android:layout_marginTop="15dp"
           android:layout_marginLeft="15dp"
           android:textSize="25dp"/>

       <TextView
           android:id="@+id/we"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/love"
           app:layout_constraintTop_toBottomOf="@id/star"
           app:layout_constraintLeft_toLeftOf="parent"
           android:layout_marginTop="30dp"/>

       <TextView
           android:id="@+id/nine"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="$ 99.9"
           app:layout_constraintTop_toBottomOf="@+id/we"
           app:layout_constraintLeft_toLeftOf="parent"
           android:layout_marginTop="30dp"
           android:textSize="30dp"/>

       <Button
           android:layout_width="150dp"
           android:layout_height="50dp"
           android:text="ORDER NOW"
           android:background="@drawable/roundbutton"
           app:layout_constraintTop_toBottomOf="@+id/we"
           app:layout_constraintRight_toRightOf="parent"
           android:layout_marginTop="20dp"/>

   </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>